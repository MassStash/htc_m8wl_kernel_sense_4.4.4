#!/bin/bash
#This is a spin off script related to Chadouming's build and package script for Android.
#Created by Evolutionmods & MysteryEmotionz

#Config Section below is where you set your paths-

#Kernel path
kernelDir1="/home/zaichron-lin/AndroidDev/htc_m8whl_kernel_sense_4.4.4" #( Example /home/user/path )
kernelDir2="/home/zaichron-lin/AndroidDev/htc_m8whl_kernel_sense_4.4.4" #( Example /home/user/path )
kernelDir3="Path to kernel 3" #( Example /home/user/path )
#Toolchain path
toolchainDir="/home/zaichron-lin/AndroidDev/AAtoolchains/linaro_toolchains_2014/arm-cortex_a15-linux-gnueabihf-linaro_4.9.2-2014.10" #( Example /home/user/path )
#Path where you would like the kernel to be outputed
exportDir="/home/zaichron-lin/Desktop/Copy/AndroidDev/Kernz/m8wl/out" #( Example /home/user/Desktop )
#Change default to what ever you like
kernel1name="Hypernova-m8wl-v1.3.0-Bellatrix-Sense"
kernel2name="Hypernova-m8wl-v1.3.x"
kernel3name="Default-3"
#Do not edit
now=$(date +"%m-%d-%Y-%H-%M")
threads=$(expr 2 + $(grep processor /proc/cpuinfo | wc -l))
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# End of Config Section-

clear
echo "                                Kernel-Builder                                 "
echo "                                      By                                       "
echo "                    Chadouming, Evolutionmods & MysteryEmotionz                "
echo "-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-"
echo " Welcome back" $USER"                      $(date)"
echo "-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-"
echo 
echo
echo " Please choose a muthafukin kernel "
echo
OPTIONS="$kernel1name $kernel2name $kernel3name"
select opt in $OPTIONS; do
    if [ "$opt" = "$kernel1name" ]; then
     clear
     echo "$kernel1name selected"
     sleep 2
     kernelName="$kernel1name"
     cd $kernelDir1
     break
    elif [ "$opt" = "$kernel2name" ]; then
     clear
     echo "$kernel2name selected"
     sleep 2
     kernelName="$kernel2name"
     cd $kernelDir2
     break
    elif [ "$opt" = "$kernel3name" ]; then
     clear
     echo "$kernel3name selected"
     sleep 2
     kernelName="$kernel3name"
     cd $kernelDir3
     break
    else
     clear
     ./build
    fi
done

echo
echo
echo " Compiling dt.img brah "
./dtb -o arch/arm/boot/dt.img -s 2048 -d "htc,project-id = <" -p ./scripts/dtc/ ./arch/arm/boot/

echo
echo
echo " Now the kernel is going to get packaged in a flashable zip yo"

echo
echo
#mkdir zip2
#mkdir zip2/kernel
#mkdir zip2/modules
#cp arch/arm/boot/zImage zip2/kernel/

echo
echo
echo " Moved zImage "
cp arch/arm/boot/zImage ~/AndroidDev/AAmkbootimg_tools/venom_vzw
#cp arch/arm/boot/dt.img zip2/kernel/

echo
echo
echo " Moved dt.img "
cp arch/arm/boot/dt.img ~/AndroidDev/AAmkbootimg_tools/venom_vzw

echo
echo
echo " Moving modules "
find -iname *.ko | xargs cp -t /home/zaichron-lin/Desktop/Copy/AndroidDev/Kernz/m8wl/Hypernova-Sense-4.4.4/system/lib/modules
cd ~/AndroidDev/AAmkbootimg_tools

echo
echo
echo " Making a boot.img ya'll "
./mkboot venom_vzw boot.img

echo
echo
echo " Moved boot.img "
cp boot.img /home/zaichron-lin/Desktop/Copy/AndroidDev/Kernz/m8wl/Hypernova-Sense-4.4.4/boot

cd /home/zaichron-lin/Desktop/Copy/AndroidDev/Kernz/m8wl/Hypernova-Sense-4.4.4/system/lib/modules

mv wlan.ko /home/zaichron-lin/Desktop/Copy/AndroidDev/Kernz/m8wl/Hypernova-Sense-4.4.4/system/lib/modules/pronto/pronto_wlan.ko

cd /home/zaichron-lin/Desktop/Copy/AndroidDev/Kernz/m8wl/Hypernova-Sense-4.4.4

echo
echo
echo " I a make a da zip now, then move that ish to copy out dir "
zip -r $kernelName-$now.zip * -x **~*
mv $kernelName-$now.zip $exportDir
#cd ..
cd ~/AndroidDev/htc_m8whl_kernel_sense_4.4.4
#rm -r zip2
cd $DIR
echo
echo
echo " Check $exportDir for $kernelName-$now.zip and repeat "
sleep 10
